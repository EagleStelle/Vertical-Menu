<UserControl
    x:Class="DashboardTesting.CustomButtonControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DashboardTesting">

    <Button x:Name="MainButton" Background="Transparent" BorderThickness="0" 
            Tag="{x:Bind Tag, Mode=OneWay}" 
            Click="Button_Click">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Image Source="{x:Bind ImageSource, Mode=OneWay}" Width="50" Height="50" Margin="0,0,10,0"/>
            <TextBlock x:Name="ButtonText" Text="{x:Bind Text, Mode=OneWay}" FontSize="20" VerticalAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
